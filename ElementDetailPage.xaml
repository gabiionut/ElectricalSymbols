<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ElectricalSymbols.ElementDetailPage"
             Title="{Binding Name}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Image}" Margin="0, 20, 0, 0"/>
            <Label Text="{Binding Details}" VerticalTextAlignment="Center" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="5, 20, 5, 0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>